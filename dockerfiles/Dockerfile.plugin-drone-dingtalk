FROM golang:1.13.4 as builder
COPY . /build/
WORKDIR /build/dingtalk
RUN ls
RUN GOPROXY=https://goproxy.cn,direct CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o plugin-drone-dingtalk ./apps/plugin-drone

FROM alpine
RUN apk update \
    && apk add --no-cache ca-certificates \
    && rm -rf /var/cache/apk/*
MAINTAINER zhaoweiguo<docker@zhaoweiguo.com>
COPY --from=builder /build/dingtalk/plugin-drone-dingtalk /
ENTRYPOINT ["/plugin-drone-dingtalk"]




